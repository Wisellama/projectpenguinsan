public class Character {
    protected float xPosition, yPosition;
    protected boolean alive;
    
    public Character(x,y) {
	xPosition = x;
	yPosition = y;
	alive = true;
    }

    public Character() {
	xPosition = 100;
	yPosition = 100;
	alive = true;
    }

    public isAlive() {
	return alive;
    }

    public kill() {
	alive = false;
    }

}